# ============================================================================
# Auth Service Test Dockerfile
#
# Docker 환경에서 pytest 실행
# Usage: docker-compose -f docker-compose.test.yml run --rm test
# ============================================================================
FROM python:3.11-slim

WORKDIR /app

# 빌드 및 테스트 의존성 설치
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# 의존성 설치 (테스트 포함)
COPY domains/auth/requirements.txt /tmp/requirements.txt
COPY domains/auth/requirements-test.txt /tmp/requirements-test.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt -r /tmp/requirements-test.txt

# 애플리케이션 코드 복사
COPY domains/auth /app/domains/auth

# PYTHONPATH 설정
ENV PYTHONPATH=/app

# 기본 명령: pytest 실행
CMD ["python", "-m", "pytest", "domains/auth/tests/", "-v", "--tb=short"]
